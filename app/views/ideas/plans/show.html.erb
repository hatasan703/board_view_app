<div class="planning_container">
  <div class="planning_idea">
    <p class="planning_idea_title"><%= @idea.title %></p>
    <p class="planning_idea_content"><%= @idea.content %></p>
  </div>
  <div class="plan_image">
    <% if @plan.image? %>
        <%= image_tag @plan.image.url, class: "file-preview" %>
    <% else %>
      <%= image_tag 'bm/default-bm.png', class: "file-preview", alt: 'ビジネスモデル' %>
    <% end %>
  </div>

  <div class="planning_contents">
    <% @plan.plan_contents.each do |plan| %>
      <p class="plan_question_title">【確認事項】 <%= plan.plan_question.title %></p>
      <p class="plan_question_content"><%= plan.plan_question.content %></p>
      <p class="plan_content"><%= plan.content %></p>
    <% end %>
  </div>

  <h3>コメント一覧</h3>
  <% @comments.each do |comment| %>
    <div class="plan_comment">
      <div class="plan_comment_user">
        <%= comment.user.name %>
      </div>
      <div class="plan_comment_content">
        <%= comment.content %>
      </div>
    </div>
  <% end %>
  <%= form_with model: @comment, url: plan_plan_comments_path(@plan) do |f| %>
    <div class="field">
      <%= f.text_field :content, placeholder: 'コメント' %><br>
    </div>
    <div class="actions">
      <%= f.submit "送信" %>
    </div>
  <% end %>
</div>

<style>

.plan_comment{
  margin: 10px auto;
  width: 50%;
  
}
.plan_comment{
  display: flex;
}
.plan_comment_user{
  margin-right: 5px;
}
.plan_comment_content{
  width: 350px;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
}
</style>