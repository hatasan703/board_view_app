<h3>アイディア</h3>
<p><%= @idea.title %></p>
<p><%= @idea.content %></p>

<h3>アイディアメモ</h3>
<% @memos.each do |memo| %>
<p><%= link_to "#{memo.content}", idea_memo_path(memo) %></p>
<% end %>

<%= form_with(model: [@idea, @memo], local: true) do |f| %>
  <div>アイディアメモ追加</div>
      <%= f.label :content, "本文", class: '' %><br>
      <%= f.text_area :content, class: '', required: true %><br>
    <%= f.submit "送信" %>
<% end %>


